---
import type { Playlist } from "@/lib/data"

interface Props {
  playlist: Playlist
}

const { playlist } = Astro.props

const { id, cover, title, artists, color } = playlist

const astistsString = artists.join(", ")
---

<a
  href={`/playlist/${id}`}
  class="playlist-item flex realtive p-2 overflow-hidden items-center gap-5 rounded-md hover:bg-zinc-800"
>
  <picture class="h-12 w-12 flex-none">
    <img
      src={cover}
      alt={`Cover of ${title} by ${astistsString}`}
      class="object-cover w-full h-full rounded-md"
    />
  </picture>

  <div class="flex flex-auto flex-col truncate">
    <h4 class="text-sm text-white">
      {title}
    </h4>
    <span class="text-xs text-gray-400">{astistsString}</span>
  </div>
</a>
